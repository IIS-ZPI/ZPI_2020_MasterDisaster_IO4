#parse("/velocity/layout.vm")
#@mainLayout()
    <table class="prettyTable">
        <th>State name</th>
        #foreach($category in $categories)
            <th>$categoriesTranslator.tr($category)</th>
        #end
        <th></th>

        #foreach($state in $states)
        <tr>
            <td class="state-name">$state.getName()</td>
            #foreach($category in $categories)
                #set( $tax = $state.getTaxForCategory($category))
                #if(!$tax)
                    #set( $tax = "-")
                #end
                <td>$tax%</td>
            #end
            <th class="edit-category">
                <!--<a href="/state/$state.getName()">-->
                   <button class="prettyButton" data-toggle="modal" data-target="#editStateModal">
                   Edit
                   </button>
                <!--</a>-->
            </th>
        </tr>
        #end
    </table>

    <div class="modal fade" id="editStateModal" tabindex="-1" role="dialog" aria-labelledby="editStateModal" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editStateModal">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form method="post" id="editStateForm">
                  <div class="form-group">
                    <label class="col-form-label" id="editStateNameID"></label>
                    <input type="hidden" name="editStateName" id="editStateNameIDHidd" value=""/>
                  </div>
                  <div class="form-group">
                    <label for="category-group" class="col-form-label" id="editCategoryNameID">Category: </label>
                    <select name="editCategoryName" class="custom-select">
                        #foreach($cat in $categories)
                        <option value="$cat">$categoriesTranslator.tr($cat)</option>
                        #end
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="tax-group" class="col-form-label">Tax:</label>
                    <input type="number" name="editTax" style="width: 50%;" id="editTaxID" min="0" value="0"/>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="edit_tax_submit()" type="button" class="btn btn-primary" id="editSubmit">Submit</button>
              </div>
            </div>
          </div>
        </div>

        <script>
                $('#editStateModal').on('show.bs.modal', function (event) {
                  var button = $(event.relatedTarget) // Button that triggered the modal
                  var id = button.data('whatever') // Extract info from data-* attributes
                  // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
                  // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
                  var modal = $(this)
                  var row = document.getElementById(id);
                  var productName = row.cells[0].innerHTML;
                  var categoryName = row.cells[1].innerHTML.substring(6);
                  var basePriceName = row.cells[2].innerHTML;

                  modal.find('.modal-title').text('Edit ' + productName)
                  modal.find('#editProductNameID').text('Product: ' + productName)
                  modal.find('#editProductNameIDHidd').val(productName)
                  modal.find('#editCategoryNameID').val(categoryName)
                  modal.find('#editBasePriceID').val(basePriceName)
                })

                function edit_product_submit() {
                    document.getElementById("editStateForm").submit();
                }
            </script>
#end