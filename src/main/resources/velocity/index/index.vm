#parse("/velocity/layout.vm")
#@mainLayout()
<form method="get" action="/compute-tax">
    Choose state
    <select name="state">
    #foreach($states in $states)
        <option value="$states.getName()">$states.getName()</option>
    #end
    </select>
    Choose product
    <select name="product">
    #foreach($product in $products)
            <option value="$product.getName()">$product.getName()</option>
    #end
    </select>
    Amount of product
    <input type="number" id="amount" name="amount" min="1">
    Base price
    <input type="number" step="0.01" min="0" name="base_price">
    Expected price
    <input type="number" step="0.01" min="0" name="expected_price">
    <br>
    <button>Submit</button>
</form>
    <a href="/states">
       <button>Browse states</button>
    </a>
#end